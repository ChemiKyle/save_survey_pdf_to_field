{
    "name": "save_survey_pdf_to_field module",
    "namespace": "SaveSurveyPdfToFieldModule\\ExternalModule",
    "description": "A REDCap external module to save a PDF of a survey to a file upload field",
    "permissions": [
        "hook_survey_complete"
    ],
    "authors": [
        {
            "name": "Dileep Rajput",
            "email": "rajputd@ufl.edu",
            "institution": "CTS-IT - University of Florida"
        },
        {
            "name": "Philip B. Chase",
            "email": "pbc@ufl.edu",
            "institution": "CTS-IT - University of Florida"
        }
      ],
    "system-settings" : [
      {
        "key" : "ssptf_sender_address",
        "name" : "sender email address",
        "required": true,
        "type": "text",
        "repeatable": false
      },
      {
        "key": "ssptf_cc",
        "name": "CC",
        "required": false,
        "type": "text",
        "repeatable": false
      }
    ],
    "project-settings": [
      {
         "key": "ssptf_receiver_address",
         "name": "receiver email address",
         "required": true,
         "type": "text",
         "repeatable": false
      },
      {
          "key": "ssptf_source_target_pairs",
          "name": "instrument-upload_field pair",
          "required": true,
          "type": "sub_settings",
          "repeatable": true,
          "sub_settings": [
            {
              "key": "ssptf_source_instrument",
              "name": "instrument name",
              "required": true,
              "type": "form-list",
              "repeatable": false
            },
            {
              "key": "ssptf_target_upload_field",
              "name": "upload field name",
              "required": true,
              "type": "field-list",
              "repeatable": false
            }
          ]
      }
    ]
}
